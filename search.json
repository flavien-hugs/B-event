---
    layout: null
---

[
    {% for post in site.posts %}
        {
            "categorie": "{{ post.categories | join: ', ' }}",
            "tags": "{{ post.tags | array_to_sentence_string }}",
            "title": "{{ post.title | strip_html | escape }}",
            "url": "{{ site.url }}{{ post.url }}",
            "date" : "{{ post.date }}"
        }
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
]
